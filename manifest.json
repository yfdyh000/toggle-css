{
    "manifest_version": 2,
    "name": "toggle-css",
    "version": "0.1.0",

    "description": "Browser extension to quickly toggle CSS.",

    "icons": {
        "48": "assets/css-enabled.svg",
        "96": "assets/css-enabled.svg"
    },

    "browser_action": {
        "default_icon": {
            "48": "assets/css-enabled.svg",
            "96": "assets/css-enabled.svg"
        },
        "default_title": "Toggle CSS"
    },

    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["src/toggle-css.js"]
    }],

    "background": {
        "scripts": [
            "src/background.js"
        ]
    }
}
